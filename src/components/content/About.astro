---
import AboutMotion from "../AboutMotion";
import TechSkills from "../TechSkills.astro";

const techSkills = [
    "Python",
    "PHP",
    "JavaScript",
    "TensorFlow",
    "Keras",
    "PyTorch",
    "Ultralytics YOLO",
    "Scikit-Learn",
    "OpenCV",
    "Mediapipe",
    "XGBoost",
    "Flask",
    "Pandas",
    "NumPy",
    "Matplotlib",
    "Seaborn",
    "Laravel",
    "Astro JS",
    "MySQL",
    "Microsoft SQL Server",
];
---

<section class="w-full h-fit overflow-hidden relative" id="about">
    <AboutMotion client:load>
        {
            techSkills.map((tech: string) => (
                <TechSkills tech={tech} size="medium" />
            ))
        }
    </AboutMotion>
</section>
